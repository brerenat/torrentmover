<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{dd-MM-yyyy HH:mm:ss} %-5level %logger{36} - %msg%n" />
		</Console>
		<RollingFile name="MyFile" fileName="torrentmover.log"
			fileNamePattern="torrentmover.%i.log" ignoreExceptions="false">
			<PatternLayout
				pattern="%d{dd-MM-yyyy HH:mm:ss.SSS} %-5level %logger{36} - %msg%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="10MB" />
			</Policies>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Root level="info">
			<AppenderRef ref="Console" />
			<AppenderRef ref="MyFile" />
		</Root>
	</Loggers>
</Configuration>